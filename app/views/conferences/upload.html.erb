<h1>Import CSV</h1>

<p>Please select the correct column name for each attribute.</p>

<div class="well">
	<%= form_for @conference, url: { action: 'import_' + @table }, html: { class: 'form-horizontal' } do |f| %>
		<fieldset>
		  <%= f.hidden_field :path, value: @path %>
		  <% fm = FuzzyMatch.new(@headers)%>
		  <% if @table == 'attendees' %>
		    <% fields = [:last, :first, :email, :affiliation] %>
				<% field_names = ['Last Name', 'First Name', 'Email', 'Affiliation'] %>
				<% cls = Attendee %>
		  <% else %>
		    <% fields = [:last, :first, :email, :affiliation, :title, :session, :location] %>
				<% field_names = ['Last Name', 'First Name', 'Email', 'Affiliation', 'Poster Title', 'Session', 'Location'] %>
				<% cls = Presenter %>
		  <% end %>
		  <% fields.zip(field_names).each do |a, n| %>
					<div class="form-group">
				    <%= f.label a, n, class: 'col-md-2 control-label' %>
						<div class="col-md-10" style="width: 25%">
					    <%= f.collection_select a, @headers + (cls.validators_on(a).any? { |v| v.is_a?(ActiveModel::Validations::PresenceValidator) } ? [] : ['n/a']), :to_s, :to_s, { selected: fm.find(a.to_s) }, { class: 'form-control' } %>
						</div>
					</div>
				<br/>
		  <% end %>
			<div class="form-group">
				<div class="col-md-10 col-md-offset-2">
				  <%= link_to 'Cancel', @conference, class: 'btn btn-default', role: 'button' %>
				  <%= f.submit 'Import', class: 'btn btn-primary' %>
				</div>
			</div>
		</fieldset>
	<% end %>
</div>