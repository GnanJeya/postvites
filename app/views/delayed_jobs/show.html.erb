<% content_for :for_head do %>
  <script type="text/javascript">
  counter = 3;
  $(document).ready(function() {
    $('#countdown').text(counter);
    setInterval(function() {
      if (counter === 0) {
        window.location.reload(false);
        return;
      }
      --counter;
      $('#countdown').text(counter);
      return counter;
    }, 1000);
  })
  </script>
<% end %>

<h1>Processing...</h1>

Refreshing in <span id="countdown"></span> seconds.
