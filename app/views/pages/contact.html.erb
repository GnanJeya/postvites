<h1>Help and Contact</h1>

<p>Please send us a message and we will get back to you as soon as possible.</p>

<div style="width: 50%; margin: 0 auto">
  <%= form_tag contact_path, method: :post, html: { class: 'form-horizontal' } do %>
    <fieldset>
      <div class="form-group">
        <%= label :contact, :name, 'Name:', class: 'control-label' %>
        <%= text_field :contact, :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label :contact, :email, 'Email:', class: 'control-label' %>
        <%= text_field :contact, :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label :contact, :message, 'Message:', class: 'control-label' %>
        <%= text_area :contact, :message, class: 'form-control', rows: 5 %>
      </div>
  	  <%= submit_tag 'Send', class: 'btn btn-primary', style: 'float: right' %>
    </fieldset>
  <% end %>
</div>
<br/>
